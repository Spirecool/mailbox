{% extends 'base.html.twig' %}

{% block title %}Mailbox
{% endblock %}

{% block body %}
	<section class="container">
		<div class="row">
			<div class="col-12">
				<h1 class="mt-5 mb-3 text-uppercase"></h1>
				<h2 class="mt-3 mb-5">
					-> MailBox
				</h2>
				<p>
					You received
					{{ app.user.received|length }}
					message(s)
				</p>
			</div>

			<div class="col-3">From</div>
			<div class="col-3">Subject</div>
			<div class="col-3">Date</div>
			<div class="col-3">Actions</div>

			{% for message in app.user.received %}
			
			{#  on met en gras quand message n'est pas lu  #}
			{% if message.isRead == 0 %}
				{% set bold = "fw-bold" %}
			{% else %}
				{% set bold = "" %}
			{% endif %}

				<div class="col-3 {{ bold }}"> {{ message.sender.email }} </div>
				<div class="col-3 {{ bold }}"> <a href="{{ path("app_read", {id:message.id}) }}"> {{ message.title }} </a> </div>
				<div class="col-3 {{ bold }}"> {{ message.createdAt|date }} </div>
				<div class="col-3 {{ bold }}">
					<a href="{{ path("app_delete", {id:message.id}) }}" >
						<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-file-excel-fill text-danger" viewBox="0 0 16 16">
							<path d="M12 0H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2zM5.884 4.68 8 7.219l2.116-2.54a.5.5 0 1 1 .768.641L8.651 8l2.233 2.68a.5.5 0 0 1-.768.64L8 8.781l-2.116 2.54a.5.5 0 0 1-.768-.641L7.349 8 5.116 5.32a.5.5 0 1 1 .768-.64z"/>
						</svg>
					</a>
				</div>
			{% endfor %}

			<div class="col">
				<a class="btn btn-dark my-5" data-bs-toggle="offcanvas" href="#offcanvasExample" role="button" aria-controls="offcanvasExample">
					See my Folders
				</a>
				<a href="{{ path("app_send") }}" class="btn btn-primary">Send a message</a>
			</div>
			<div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasExample" aria-labelledby="offcanvasExampleLabel">
				<div class="offcanvas-header">
					<h2 class="offcanvas-title" id="offcanvasExampleLabel">Folders</h2>
					<button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
				</div>
				<div class="offcanvas-body">
					<p>
						Check your folder's mails
					</p>
					<div class="list-group">
						<a href="{{ path("app_messages") }}" class="list-group-item list-group-item-action ">
							Home</a>
						<a href="{{ path("app_received") }}" class="list-group-item list-group-item-action active">
							MailBox</a>
						<a href="{{ path("app_sent") }}" class="list-group-item list-group-item-action">
							Sent Mails</a>
					</div>
				</div>
			</section>
		{% endblock %}
