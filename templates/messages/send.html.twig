{% extends 'base.html.twig' %}

{% block title %}Messagerie
{% endblock %}

{% block body %}
	<section class="container">
		<div class="row">
			<div class="col">
            
				<h1 class="mt-5 mb-3 text-uppercase">Send a message</h1>
                <a class="btn btn-dark my-5" data-bs-toggle="offcanvas" href="#offcanvasExample" role="button" aria-controls="offcanvasExample">
					See my folders
				</a>
                {{ form(form) }}
				
			</div>
		</div>
	</section>
	<div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasExample" aria-labelledby="offcanvasExampleLabel">
		<div class="offcanvas-header">
			<h2 class="offcanvas-title" id="offcanvasExampleLabel">My folders</h2>
			<button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
		</div>
		<div class="offcanvas-body">
            <div class="list-group">
                <a href="{{ path("app_logout") }}" class="list-group-item list-group-item-action">Logout</a>
            </div>
            <div class="list-group">
                <a href="{{ path("app_messages") }}" class="list-group-item list-group-item-action">MailBox</a>
            </div>
            <div class="list-group">
                <a href="{{ path("app_messages") }}" class="list-group-item list-group-item-action">Sent Email</a>
            </div>
		</div>
	</div>
{% endblock %}
