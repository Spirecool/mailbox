{% extends 'base.html.twig' %}

{% block title %}Mailbox
{% endblock %}

{% block body %}


	<section class="container">
		<div class="row">
			<div class="col-12 pt-5 pb-3">
				<h1 class="mt-3 mb-5">
					Sent messages
				</h1>
				<p>
					You've sent
					<strong>
						{{ app.user.sent|length }}
					</strong>
					messages</p>

				</p>
			</div>
			<div class="table-responsive-xl mt-5 ">
				<table class="table table-hover">
					<thead>
						<tr>
							<th>To</th>
							<th>Subject</th>
							<th>Date</th>
							<th>Action</th>
						</tr>
					</thead>
					<tbody>
						{% for message in app.user.sent %}
							{% set bold = "" %}
							{% if message.isRead == 0 %}
								{% set bold = "fw-bold" %}
							{% endif %}

							<tr>
								<td class="col-3 {{bold}}">{{ message.sender.email }}</td>
								<td class="col-3 {{bold}}">
									<a href="{{ path("app_read", {id: message.id}) }}">{{ message.title }}</a>
								</td>
								<td class="col-3 {{bold}}">{{ message.createdAt|date }}</td>
								<td class="col-3">
									<a href="{{ path("app_delete", {id: message.id}) }}">
										<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-file-excel-fill text-danger" viewbox="0 0 16 16">
											<path d="M12 0H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2zM5.884 4.68L8 7.219l2.116-2.54a.5.5 0 1 1 .768.641L8.651 8l2.233 2.68a.5.5 0 0 1-.768.64L8 8.781l-2.116 2.54a.5.5 0 0 1-.768-.641L7.349 8 5.116 5.32a.5.5 0 1 1 .768-.64z"/>
										</svg>
									</a>
								</td>
							{% endfor %}
						</tr>
					</tbody>
				</table>

				<div class="col">
					<a href="{{path("app_send")}}" class="btn btn-dark mt-5">Send a message</a>
				</div>

			
			</div>
		</div>
	</section>
{% endblock %}
