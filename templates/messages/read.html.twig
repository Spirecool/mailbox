{% extends 'base.html.twig' %}

{% block title %}Messagerie
{% endblock %}

{% block body %}
	<section class="container">
		<div class="row">
			<div class="col-12">
				<h1 class="py-5">Messagerie</h1>
				<div class="col">
					<h2 class="pb-3">Title : {{ message.title }}</h2>
					<p> From
						{{ message.sender.email }}</p>
					<p> Date :
						{{ message.createdAt|date }}</p>
                    <div class="pb-5"> Message : {{ message.message }}
                    </div>
				</div>
				<a href="{{path("app_received")}}" class="btn btn-dark">Back to MailBox</a>
			</div>
		</div>
	</section>
	
{% endblock %}
